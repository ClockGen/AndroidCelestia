<space.celestia.mobilecelestia.common.ProgressView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:backgroundColor="@color/colorProgressBackground"
    app:progressColor="@color/colorProgressForeground"
    app:rippleColor="@color/mtrl_btn_ripple_color"
    app:cornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/progress_view_text"
        android:gravity="center"
        android:layout_marginVertical="12dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ActionButtonLabel" />
</space.celestia.mobilecelestia.common.ProgressView>