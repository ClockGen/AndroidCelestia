<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/ListItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/list_item_medium_margin_horizontal"
        android:layout_marginTop="@dimen/list_item_medium_margin_vertical"
        android:layout_marginBottom="@dimen/list_item_gap_vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/PrimaryListItemLabel"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/subtitle"
            android:layout_marginTop="@dimen/list_text_gap_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SecondaryListItemLabel"/>
    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_marginBottom="@dimen/list_item_medium_margin_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/list_item_slider_margin_horizontal"/>
</LinearLayout>
