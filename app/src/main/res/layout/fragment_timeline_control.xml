<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_control_container_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/bottom_control_view_margin_horizontal"
    android:paddingVertical="@dimen/bottom_control_view_margin_vertical"
    style="@style/ControlViewBackground">
    <space.celestia.ui.slider.TimelineSlider
        android:id="@+id/timeline_slider"
        android:layout_marginHorizontal="@dimen/timeline_slider_margin_horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/timeline_slider_track_height"
        android:layout_weight="1"/>

    <space.celestia.mobilecelestia.common.StandardImageButton
        android:id="@+id/hide_button"
        android:layout_width="@dimen/bottom_control_view_item_dimension"
        android:layout_height="@dimen/bottom_control_view_item_dimension"
        android:src="@drawable/bottom_control_hide"
        style="@style/Image"/>
</LinearLayout>